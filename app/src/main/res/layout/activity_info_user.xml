<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoUserActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imgUser"
        android:src="@drawable/login2"
        android:layout_width="match_parent"
        android:layout_height="200dp"></ImageView>


    <TextView
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/textPhoneInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:text="Số điện thoại:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:id="@+id/textPhoneInfo"
        android:text="Số điện thoại"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUser"/>

    <TextView
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/textNameInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:text="Tên khách hàng:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textNameInfo"
        android:text="Tên khách hàng"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPhoneInfo"/>



    <TextView
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/textAddInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:text="Địa chỉ:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/textAddInfo"
        android:text="Địa chỉ"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameInfo"/>

    <TextView
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/textBirthInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:text="Ngày sinh:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textBirthInfo"
        android:layout_marginTop="50dp"
        android:text="Ngày sinh"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAddInfo"/>

    <Button
        android:id="@+id/buttonSaveInfo"
        android:text="Xác nhận"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textBirthInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>